{{ attach_library('socion/bootstrap_cdn') }}
{{ attach_library('socion/socion_form') }}

<div class="container">
    <div class="row">
      {{ form.form_build_id }}
      {{ form.form_token }}
      {{ form.form_id }}
      <div class="col-md-12">
        {{ form.chart }}
      </div>
    </div>
    <div class="row">
      {% for element in form %}
        {%  if element["#attributes"]["id"][0] matches '/^aspect-.*/' %}
            <div class="col-md-6">
              {{ element }}
            </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="row">
      <div class="col-md-12">
        {{ form.name }}
      </div>
      <div class="col-md-12">
        {{ form.type_description }}
      </div>
      <div class="col-md-12">
        {{ form.avatar }}
      </div>
    </div>
    <div class="row">
      {{ form.actions }}
    </div>
</div>

